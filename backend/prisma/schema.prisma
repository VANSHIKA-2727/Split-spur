generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Test {
  id          String   @id @default(cuid())
  testName    String
  variantAUrl String
  variantBUrl String
  status      String   @default("Active")
  visitors    Int      @default(0)
  createdAt   DateTime @default(now())
}

model Insight {
  id           String   @id @default(cuid())
  title        String
  description  String
  metric       String?
  confidence   Int
  impact       String
  type         String   // all | opportunities | patterns | segments
  relatedTests String?
  createdAt    DateTime @default(now())
}
